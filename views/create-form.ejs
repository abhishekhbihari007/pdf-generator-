        <div class="help-box">
          <strong>üí° Tip:</strong> Add sections to build your worksheet. Each section serves a specific purpose in the educational content.
        </div>
        
        <div id="sectionsContainer"></div>

        <!-- Add Section Panel -->
        <div class="add-section-panel" id="addSectionPanel">
          <strong>‚ûï Add New Section</strong>
          <p style="color: #666; margin: 10px 0;">Choose a section type to add:</p>
          <div class="section-type-selector">
            <div class="section-type-card learning-focus" onclick="addSection('learning-focus')">
              <div class="section-type-icon">üìö</div>
              <div class="section-type-name">Learning Focus</div>
              <div class="section-type-desc">Â≠∏ÁøíÈáçÈªû</div>
              <div class="section-type-desc" style="margin-top: 5px; font-size: 0.8em;">
                Use this to highlight key learning points, rules, or concepts in a grey highlighted box
              </div>
            </div>
            <div class="section-type-card sentence-analysis" onclick="addSection('sentence-analysis')">
              <div class="section-type-icon">‚úçÔ∏è</div>
              <div class="section-type-name">Sentence Analysis</div>
              <div class="section-type-desc">Âè•Â≠êËæ®Êûê</div>
              <div class="section-type-desc" style="margin-top: 5px; font-size: 0.8em;">
                Use this for exercises where students analyze sentences and identify Time, Place, Person, Event (ÂõõË¶ÅÁ¥†)
              </div>
            </div>
            <div class="section-type-card picture-completion" onclick="addSection('picture-completion')">
              <div class="section-type-icon">üñºÔ∏è</div>
              <div class="section-type-name">Picture Completion</div>
              <div class="section-type-desc">ÁúãÂúñÂÆåÂè•</div>
              <div class="section-type-desc" style="margin-top: 5px; font-size: 0.8em;">
                Use this for exercises where students complete sentences based on picture hints
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="btn-group">
        <button type="submit" class="btn btn-primary">Save Worksheet</button>
        <a href="/" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>

  <script>
    let sectionCounter = 0;
    const sections = [];

    function addSection(type) {
      const sectionId = sectionCounter++;
      sections.push({ id: sectionId, type: type, data: {} });
      renderSection(sectionId, type);
    }

    function renderSection(id, type) {
      const container = document.getElementById('sectionsContainer');
      const sectionDiv = document.createElement('div');
      sectionDiv.className = `section-card ${type}`;
      sectionDiv.id = `section-${id}`;

      if (type === 'learning-focus') {
        sectionDiv.innerHTML = `
          <div class="section-header">
            <div>
              <div class="section-title">üìö Learning Focus Section (Â≠∏ÁøíÈáçÈªû)</div>
              <div class="section-description">Highlight key learning points, rules, or concepts that students need to remember</div>
            </div>
            <button type="button" class="btn-remove" onclick="removeSection(${id})">Remove</button>
          </div>
          <div class="section-info">
            <strong>Purpose:</strong> This section creates a grey highlighted box to emphasize important learning concepts. Perfect for rules, definitions, or key points.
          </div>
          <div class="form-group">
            <label>Section Title</label>
            <input type="text" class="section-title-input" placeholder="e.g., 4 Ë®òÊïçÂõõË¶ÅÁ¥†" onchange="updateSection(${id}, 'title', this.value)">
          </div>
          <div class="form-group">
            <label>Learning Points (Add multiple points)</label>
            <div class="help-box">Each point will appear as a bullet point in the learning box</div>
            <div id="points-${id}"></div>
            <button type="button" class="btn-add-point" onclick="addPoint(${id})">+ Add Learning Point</button>
          </div>
          <div class="form-group">
            <label>Example (Optional)</label>
            <textarea class="section-example-input" placeholder="e.g., ‰æãÂ≠ê:‰ªäÂ§©,ÊàëÂêÉ‰∫Ü‰∏Ä‰ª∂ËõãÁ≥ï„ÄÇ(Âè•Â≠ê‰∏≠Âè™ÊúâÊôÇÈñì„ÄÅ‰∫∫Áâ©Âíå‰∫ãÊÉÖ,‰∏¶Ê≤íÊúâÂú∞Èªû„ÄÇ)" onchange="updateSection(${id}, 'example', this.value)"></textarea>
            <small style="color: #666;">This example will appear below the learning points</small>
          </div>
        `;
      } else if (type === 'sentence-analysis') {
        sectionDiv.innerHTML = `
          <div class="section-header">
            <div>
              <div class="section-title">‚úçÔ∏è Sentence Analysis Section (Âè•Â≠êËæ®Êûê)</div>
              <div class="section-description">Students analyze sentences and identify the four narrative elements: Time (ÊôÇ), Place (Âú∞), Person (‰∫∫), Event (‰∫ã)</div>
            </div>
            <button type="button" class="btn-remove" onclick="removeSection(${id})">Remove</button>
          </div>
          <div class="section-info">
            <strong>Purpose:</strong> This section creates exercises where students read sentences and fill in a 2x2 grid identifying Time, Place, Person, and Event. Perfect for teaching narrative structure.
          </div>
          <div class="form-group">
            <label>Section Title</label>
            <input type="text" class="section-title-input" placeholder="e.g., III. Âè•Â≠êËæ®Êûê" onchange="updateSection(${id}, 'title', this.value)">
          </div>
          <div class="form-group">
            <label>Instructions</label>
            <textarea class="section-instructions-input" placeholder="e.g., Ê†πÊìö‰∏ãÂàóÂêÑÂè•,Âú®Ê©´Á∑ö‰∏äÂ°´‰∏äÈÅ©Áï∂ÁöÑË®òÊïçÂõõË¶ÅÁ¥†,Ê≤íÊúâÊèêÂèäÁöÑÂ°´√ó„ÄÇ" onchange="updateSection(${id}, 'instructions', this.value)"></textarea>
            <small style="color: #666;">Instructions that appear above the questions</small>
          </div>
          <div class="form-group">
            <label>Questions</label>
            <div class="help-box">Each question requires: (1) A sentence to analyze, (2) Answers for Time, Place, Person, and Event</div>
            <div id="questions-${id}"></div>
            <button type="button" class="btn-add-question" onclick="addQuestion(${id})">+ Add Question</button>
          </div>
        `;
      } else if (type === 'picture-completion') {
        sectionDiv.innerHTML = `
          <div class="section-header">
            <div>
              <div class="section-title">üñºÔ∏è Picture Completion Section (ÁúãÂúñÂÆåÂè•)</div>
              <div class="section-description">Students complete sentences based on picture hints using Time, Place, Person, and Event</div>
            </div>
            <button type="button" class="btn-remove" onclick="removeSection(${id})">Remove</button>
          </div>
          <div class="section-info">
            <strong>Purpose:</strong> This section creates exercises where students see hints (Time, Place, Person, Event) and write a complete sentence. Perfect for sentence construction practice.
          </div>
          <div class="form-group">
            <label>Section Title</label>
            <input type="text" class="section-title-input" placeholder="e.g., IV. ÁúãÂúñÂÆåÂè•" onchange="updateSection(${id}, 'title', this.value)">
          </div>
          <div class="form-group">
            <label>Instructions</label>
            <textarea class="section-instructions-input" placeholder="e.g., Ê†πÊìöÂúñÊÑèÂíåÊã¨ËôüÂÖßÁöÑÊèêÁ§∫,ÂØ´‰ΩúÂè•Â≠ê„ÄÇ(Á≠îÊ°àÂè™‰æõÂèÉËÄÉ)" onchange="updateSection(${id}, 'instructions', this.value)"></textarea>
            <small style="color: #666;">Instructions that appear above the questions</small>
          </div>
          <div class="form-group">
            <label>Questions</label>
            <div class="help-box">Each question requires: (1) Hints for Time, Place, Person, Event, (2) A complete sentence as the answer</div>
            <div id="picture-questions-${id}"></div>
            <button type="button" class="btn-add-question" onclick="addPictureQuestion(${id})">+ Add Question</button>
          </div>
        `;
      }

      container.appendChild(sectionDiv);
    }

    function updateSection(id, field, value) {
      const section = sections.find(s => s.id === id);
      if (section) {
        if (!section.data) section.data = {};
        section.data[field] = value;
      }
    }

    function addPoint(id) {
      const container = document.getElementById(`points-${id}`);
      const pointDiv = document.createElement('div');
      pointDiv.className = 'point-item';
      const pointId = Date.now();
      pointDiv.innerHTML = `
        <input type="text" placeholder="Enter a learning point (e.g., Ê≥®ÊÑè:Ë®òÊïòÂõõË¶ÅÁ¥†‰∏ç‰∏ÄÂÆöÊúÉÂÖ®ÈÉ®Âá∫ÁèæÊñºÂêå‰∏ÄÂÄãÂè•Â≠êÂÖß„ÄÇ)" onchange="updatePoint(${id}, ${pointId}, this.value)">
        <button type="button" class="btn-remove-small" onclick="removePoint(${id}, ${pointId})">Remove</button>
      `;
      pointDiv.id = `point-${pointId}`;
      container.appendChild(pointDiv);
    }

    function updatePoint(sectionId, pointId, value) {
      const section = sections.find(s => s.id === sectionId);
      if (section) {
        if (!section.data.points) section.data.points = [];
        const existing = section.data.points.find(p => p.id === pointId);
        if (existing) {
          existing.value = value;
        } else {
          section.data.points.push({ id: pointId, value });
        }
      }
    }

    function removePoint(sectionId, pointId) {
      const pointEl = document.getElementById(`point-${pointId}`);
      if (pointEl) pointEl.remove();
      const section = sections.find(s => s.id === sectionId);
      if (section && section.data.points) {
        section.data.points = section.data.points.filter(p => p.id !== pointId);
      }
    }

    function addQuestion(id) {
      const container = document.getElementById(`questions-${id}`);
      const questionDiv = document.createElement('div');
      questionDiv.className = 'question-item';
      const questionId = Date.now();
      questionDiv.innerHTML = `
        <div class="question-header">
          <strong>Question ${container.children.length + 1}</strong>
          <button type="button" class="btn-remove-small" onclick="removeQuestion(${id}, ${questionId})">Remove</button>
        </div>
        <div class="form-group">
          <label>Sentence to Analyze</label>
          <input type="text" placeholder="e.g., ‰ªäÂ§©,Âì•Âì•Âà∞Êó•Êú¨ÊóÖË°å‰∫Ü„ÄÇ" onchange="updateQuestion(${id}, ${questionId}, 'sentence', this.value)">
          <small style="color: #666;">Enter the sentence that students will analyze</small>
        </div>
        <div class="form-group">
          <label>Answers (Fill in the four elements)</label>
          <div class="grid-4">
            <div>
              <label style="font-size: 0.9em;">Time (ÊôÇ)</label>
              <input type="text" placeholder="‰ªäÂ§©" onchange="updateQuestion(${id}, ${questionId}, 'time', this.value)">
            </div>
            <div>
              <label style="font-size: 0.9em;">Place (Âú∞)</label>
              <input type="text" placeholder="Êó•Êú¨ (or √ó if not mentioned)" onchange="updateQuestion(${id}, ${questionId}, 'place', this.value)">
            </div>
            <div>
              <label style="font-size: 0.9em;">Person (‰∫∫)</label>
              <input type="text" placeholder="Âì•Âì•" onchange="updateQuestion(${id}, ${questionId}, 'person', this.value)">
            </div>
            <div>
              <label style="font-size: 0.9em;">Event (‰∫ã)</label>
              <input type="text" placeholder="ÊóÖË°å" onchange="updateQuestion(${id}, ${questionId}, 'event', this.value)">
            </div>
          </div>
        </div>
      `;
      questionDiv.id = `question-${questionId}`;
      container.appendChild(questionDiv);
    }

    function updateQuestion(sectionId, questionId, field, value) {
      const section = sections.find(s => s.id === sectionId);
      if (section) {
        if (!section.data.questions) section.data.questions = [];
        let question = section.data.questions.find(q => q.id === questionId);
        if (!question) {
          question = { id: questionId, answers: {} };
          section.data.questions.push(question);
        }
        if (field === 'sentence') {
          question.sentence = value;
        } else {
          if (!question.answers) question.answers = {};
          question.answers[field] = value;
        }
      }
    }

    function removeQuestion(sectionId, questionId) {
      const questionEl = document.getElementById(`question-${questionId}`);
      if (questionEl) questionEl.remove();
      const section = sections.find(s => s.id === sectionId);
      if (section && section.data.questions) {
        section.data.questions = section.data.questions.filter(q => q.id !== questionId);
      }
    }

    function addPictureQuestion(id) {
      const container = document.getElementById(`picture-questions-${id}`);
      const questionDiv = document.createElement('div');
      questionDiv.className = 'question-item';
      const questionId = Date.now();
      questionDiv.innerHTML = `
        <div class="question-header">
          <strong>Question ${container.children.length + 1}</strong>
          <button type="button" class="btn-remove-small" onclick="removePictureQuestion(${id}, ${questionId})">Remove</button>
        </div>
        <div class="form-group">
          <label>Hints (Fill in the four elements as hints)</label>
          <div class="grid-2">
            <div>
              <label style="font-size: 0.9em;">Time Hint (ÊôÇÈñì)</label>
              <input type="text" placeholder="‰ªäÂ§©" onchange="updatePictureQuestion(${id}, ${questionId}, 'time', this.value)">
            </div>
            <div>
              <label style="font-size: 0.9em;">Person Hint (‰∫∫Áâ©)</label>
              <input type="text" placeholder="ÊàëÂíåÂÆ∂‰∫∫" onchange="updatePictureQuestion(${id}, ${questionId}, 'person', this.value)">
            </div>
            <div>
              <label style="font-size: 0.9em;">Place Hint (Âú∞Èªû)</label>
              <input type="text" placeholder="Âà∞ÈÉäÈáéÂÖ¨Âúí" onchange="updatePictureQuestion(${id}, ${questionId}, 'place', this.value)">
            </div>
            <div>
              <label style="font-size: 0.9em;">Event Hint (‰∫ãÊÉÖ)</label>
              <input type="text" placeholder="ÁáíÁÉ§" onchange="updatePictureQuestion(${id}, ${questionId}, 'event', this.value)">
            </div>
          </div>
          <small style="color: #666;">These hints will be displayed to help students construct the sentence</small>
        </div>
        <div class="form-group">
          <label>Complete Sentence (Answer)</label>
